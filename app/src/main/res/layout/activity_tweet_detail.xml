<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.codepath.apps.mysimpletweets.activities.DisplayTweetActivity">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBody"
        android:layout_marginTop="11dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:gravity="bottom"
        android:text="UserName"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:gravity="bottom"
        android:text="Screen Name" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:autoLink="all"
        android:background="@android:color/white"
        android:gravity="top"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_marginTop="215dp"
        android:text="43"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etReply"
        android:layout_width="291dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="74dp"
        android:ems="10"
        android:hint="Send a reply"
        android:inputType="textMultiLine"
        android:singleLine="false" />

    <TextView
        android:id="@+id/tvWordLikes"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvLikes"
        android:layout_marginStart="48dp"
        android:text="Likes"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/btheart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvLikes"
        android:layout_marginEnd="77dp"
        app:srcCompat="@drawable/ic_heart_filled" />

    <ImageButton
        android:id="@+id/btRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvBody"
        android:layout_alignTop="@+id/tvLikes"
        app:srcCompat="@drawable/ic_retweet" />

    <ImageButton
        android:id="@+id/btXOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_x_out" />

    <ImageButton
        android:id="@+id/btReply"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/etReply"
        android:layout_marginStart="-74dp"
        android:layout_toEndOf="@+id/etReply"
        app:srcCompat="@drawable/ic_reply" />

